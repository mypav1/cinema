#Rad 120
class Snack_menu:

    def __init__(self, snack=20):
        self.points = snack

    def __str__(self):
        return f"{self.points},  points"

    def __repr__(self):
        return f"{self.points},  points"


class Drink_menu:

    def __init__(self, drink=20):
        self.points = drink

    def __str__(self):
        return f"{self.points}, points"

    def __repr__(self):
        return f"{self.points}, points"


class Combo_menu:
    def __init__(self, points=30):
        self.drink = Drink_menu()
        self.snack = Snack_menu()
        self.points = points

    def __str__(self):
        return f"{self.snack}, {self.drink}, {self.points} points"

    def __repr__(self):
        return f"{self.snack}, {self.drink}, {self.points} points"


